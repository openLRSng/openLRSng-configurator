{
    "name": "openLRSng - Configurator",
    "short_name": "openLRSng",
    "description": "Cool crossplatform Configurator GUI for openLRSng project",
    "version": "0.25",
    "manifest_version": 2,
    "minimum_chrome_version": "31",
    
    "app": {
        "background": {
            "scripts": [ "background.js" ]
        }
    },
    
    "permissions": [
        "https://www.google-analytics.com/",
        "serial",
        "storage",
        "fileSystem",
        "fileSystem.write",
        "usb",
        "notifications"
    ],
    
    "optional_permissions": [
        {"usbDevices": [
            {"vendorId": 9025, "productId": 32822},
            {"vendorId": 4292, "productId": 60000},
            {"vendorId": 1027, "productId": 24577}
        ]}
    ],
    
    "icons": {
        "128": "images/icon_128.png"
    }
}